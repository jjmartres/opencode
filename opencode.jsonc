{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "autoupdate": true,
  "model": "google-vertex/gemini-2.5-pro",
  "small_model": "google-vertex/gemini-2.5-flash",
  // See https://models.dev for available models
  "provider": {
    "google-vertex": {
      "models": {
        "gemini-2.5-flash": {
          "temperature": true,
        },
        "gemini-2.5-pro": {
          "temperature": true,
        },
      },
      "options": {
        "project": "{env:VERTEXAI_PROJECT_ID}",
        "location": "{env:VERTEXAI_REGION}",
      },
    },
    "google-vertex-anthropic": {
      "models": {
        "claude-opus-4-1": {
          "temperature": true,
        },
        "claude-sonnet-4-5": {
          "temperature": true,
        },
      },
      "options": {
        "project": "{env:VERTEXAI_PROJECT_ID}",
        "location": "{env:VERTEXAI_REGION}",
      },
    },
    "anthropic": {
      "models": {
        "claude-opus-4-1": {
          "temperature": true,
        },
        "claude-sonnet-4-5": {
          "temperature": true,
        },
      },
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}",
      },
    },
  },
  // WARNING: this is a security risk, do not share sessions with anyone automatically.
  "share": "manual",
  "mcp": {
    "docker": {
      "type": "local",
      "command": ["uvx", "docker-mcp"],
      "enabled": false,
    },
    "kubernetes": {
      "type": "local",
      "command": ["npx", "-y", "kubernetes-mcp-server@latest"],
      "enabled": false,
    },
    "terraform": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server:0.3.0",
      ],
      "enabled": false,
    },
    "datadog": {
      "type": "local",
      "command": ["npx", "-y", "@winor30/mcp-server-datadog"],
      "enabled": false,
      "environment": {
        "DATADOG_API_KEY": "{env:DATADOG_API_KEY}",
        "DATADOG_APP_KEY": "{env:DATADOG_APP_KEY}",
        "DATADOG_SITE": "{env:DATADOG_SITE}",
      },
    },
    "gitlab": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--pull=always",
        "-e",
        "GITLAB_TOKEN",
        "registry.gitlab.com/fforster/gitlab-mcp:latest",
      ],
      "enabled": false,
      "environment": {
        "GITLAB_TOKEN": "{env:GITLAB_TOKEN}",
      },
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse",
      ],
      "enabled": false,
    },
  },
  "tools": {
    "docker": false,
    "kubernetes": false,
    "terraform": false,
    "datadog": false,
    "gitlab": false,
    "atlassian": false,
  },
  "agent": {
    "backend-developer": {
      "tools": {
        "docker": true,
      },
    },
    "fullstack-developer": {
      "tools": {
        "docker": true,
      },
    },
    "miscroservices-architect": {
      "tools": {
        "docker": true,
        "kubernetes": true,
      },
    },
    "cloud-architect": {
      "tools": {
        "docker": true,
        "kubernetes": true,
        "terraform": true,
      },
    },
    "deployment-engineer": {
      "tools": {
        "terraform": true,
        "gitlab": true,
      },
    },
    "devops-engineer": {
      "tools": {
        "docker": true,
        "kubernetes": true,
        "terraform": true,
      },
    },
    "devops-incident-responder": {
      "tools": {
        "kubernetes": true,
        "datadog": true,
      },
    },
    "incident-responder": {
      "tools": {
        "datadog": true,
        "atlassian": true,
      },
    },
    "kubernetes-specialist": {
      "tools": {
        "kubernetes": true,
      },
    },
    "platform-engineer": {
      "tools": {
        "kubernetes": true,
        "terraform": true,
      },
    },
    "security-engineer": {
      "tools": {
        "terraform": true,
      },
    },
    "sre-engineer": {
      "tools": {
        "terraform": true,
        "kubernetes": true,
        "datadog": true,
      },
    },
    "terraform-engineer": {
      "tools": {
        "terraform": true,
      },
    },
    "code-reviewer": {
      "tools": {
        "gitlab": true,
      },
    },
    "error-detective": {
      "tools": {
        "datadog": true,
      },
    },
    "performance-engineer": {
      "tools": {
        "datadog": true,
      },
    },
    "qa-expert": {
      "tools": {
        "atlassian": true,
      },
    },
    "mlops-engineer": {
      "tools": {
        "kubernetes": true,
        "docker": true,
        "terraform": true,
      },
    },
    "git-workflow-manager": {
      "tools": {
        "gitlab": true,
      },
    },
    "business-analyst": {
      "tools": {
        "atlassian": true,
      },
    },
    "customer-success-manager": {
      "tools": {
        "atlassian": true,
      },
    },
    "product-manager": {
      "tools": {
        "atlassian": true,
      },
    },
    "scrum-master": {
      "tools": {
        "gitlab": true,
        "atlassian": true,
      },
    },
  },
}
